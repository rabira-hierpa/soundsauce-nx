{
  "name": "soundsauce-nx",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/soundsauce-nx",
  "projectType": "application",
  "tags": ["frontend"],
  "// targets": "to see all targets run: nx show project soundsauce-nx --web",
  "targets": {
    "build": {
      "builder": "@nx/next:build",
      "outputs": ["{workspaceRoot}/dist/apps/soundsauce-nx"]
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "soundsauce-nx:build",
        "postcssConfig": "apps/soundsauce-nx/postcss.config.js",
        "dev": true,
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "soundsauce-nx:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "soundsauce-nx:build:production",
          "dev": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/soundsauce-nx/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
